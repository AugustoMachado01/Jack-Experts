{
  "compilerOptions": {
    "target": "ES2016",
    "baseUrl": "./src ",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["node", "jest"],
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "outDir": "./dist"
  },
  "include": ["src/**/*.ts", "src/types/**/*", "tests/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
